{
    "name": "Pok√©mon Showdown Enhancement Suite",
    "description": "Enhancement suite for Pokemon Showdown - shows damage calcs, type effectiveness, and more",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": [
		"contextMenus",
		"storage"	
    ],
    "content_scripts":[
        {
        "matches": ["https://play.pokemonshowdown.com/*"],
        "js": [
            "/src/content_script_load.js"
        ]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["/dest/enhancement_suite.bundle.js"],
        "matches": ["https://play.pokemonshowdown.com/*"]
    }],
    "icons": {
        "16": "./images/icons/pokeball16.png",
        "32": "./images/icons/pokeball32.png",
        "48": "./images/icons/pokeball48.png",
        "128": "./images/icons/pokeball128.png"
    }  
}